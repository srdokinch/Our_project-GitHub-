<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:id="@+id/myView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

    </LinearLayout>


    <Button
        android:id="@+id/myView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/fish"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBottom="@+id/myView3"
        android:layout_toRightOf="@+id/myView3"
        android:layout_toEndOf="@+id/myView3" />

    <Button
        android:id="@+id/myView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/myView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bowl"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/myView2"
        android:layout_alignBottom="@+id/myView2"
        android:layout_toRightOf="@+id/myView2" />
</RelativeLayout>